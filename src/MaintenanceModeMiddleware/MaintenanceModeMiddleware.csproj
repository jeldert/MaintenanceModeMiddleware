  <ItemGroup>
    <None Remove="Resources\DefaultResponse.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\DefaultResponse.html" />
  </ItemGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
